# Backend Environment Variables (Railway)
# Copy this file to backend/.env for local development

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# Authentication (Better Auth)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
BETTER_AUTH_SECRET=your-43-character-secret-here

# IMPORTANT: Update after deploying frontend
BETTER_AUTH_URL=https://your-frontend.vercel.app/api/auth

# CORS Configuration
# Multiple origins: https://app1.vercel.app,https://app2.vercel.app
FRONTEND_URL=http://localhost:3000,https://your-frontend.vercel.app

# AI Features (optional)
OPENAI_API_KEY=sk-your-openai-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Logging
PYTHONUNBUFFERED=1
