# Frontend Environment Variables (Vercel)
# Copy this file to frontend-web/.env.local for local development

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Authentication (Better Auth)
# MUST match backend BETTER_AUTH_SECRET exactly
BETTER_AUTH_SECRET=your-43-character-secret-here

# IMPORTANT: Update after deploying to Vercel
# This should point to your FRONTEND's own domain, not the backend
NEXT_PUBLIC_BETTER_AUTH_URL=https://your-frontend.vercel.app/api/auth
